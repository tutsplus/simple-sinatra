<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Exhibit</title>
    <link rel="stylesheet" href="/css/foundation.min.css" />
  </head>
  <body>
    <h1>Using ERB layout.</h1>
    <p>The current user is <%= @user %>.</p>

    <ul>
      <li>
        <a href="/sessions/new">New session</a>
      </li>
      <li>
        <%= @height %>
      </li>
      <li>
        The current environment is: <%= @environment %>
      </li>
    </ul>

    <% if @message %>
      <p>You have a message:</p>
      <blockquote>
        <%= @message %>
      </blockquote>
    <% end %>
    <%= yield %>

    <% if @environment == :development %>
      <pre>
        <%= @request.inspect %>
      </pre>
    <% end %>
  </body>
</html>
